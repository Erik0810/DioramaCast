# Environment Variables for DioramaCast

# Flask Configuration
# Set to True only for development
FLASK_DEBUG=False

# OpenWeatherMap API Key
# Get your free API key at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Google Gemini API Key
# Configure this with your Gemini API key for Imagen image generation
GEMINI_API_KEY=your_gemini_api_key_here

# Redis Configuration (Optional - for caching and rate limiting)
# Format: redis://username:password@hostname:port/db
# If not set, will use in-memory caching (not recommended for production)
# Heroku automatically sets this if Redis addon is installed
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=info
